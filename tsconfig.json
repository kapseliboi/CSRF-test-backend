{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "lib": [
            "es5",
            "es6"
         ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES5",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "rootDir": "."
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
